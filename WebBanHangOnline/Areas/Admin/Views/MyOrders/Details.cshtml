@model WebBanHangOnline.Models.EF.Order

@{
    ViewBag.Title = "Chi tiết đơn hàng";
    Layout = "~/Views/Shared/_Layout.cshtml"; // đảm bảo layout frontend
}

<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h2 class="mb-4 text-center">Chi tiết đơn hàng - @Model.Code</h2>

            <div class="card mb-4">
                <div class="card-body">
                    <p><strong>Khách hàng:</strong> @Model.CustomerName</p>
                    <p><strong>Email:</strong> @Model.Email</p>
                    <p><strong>Ngày đặt:</strong> @Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")</p>
                    <p><strong>Tổng tiền:</strong> @String.Format("{0:N0} đ", @Model.TotalAmount)</p>
                    <p><strong>Trạng thái:</strong> @Model.Status</p>
                    <p><strong>Phương thức thanh toán:</strong> @(Model.TypePayment == 1 ? "Chưa thanh toán" : "Đã thanh toán")</p>
                </div>
            </div>

            <h4 class="mb-3">Danh sách sản phẩm</h4>
            <div id="product-details">
                @Html.Action("DetailsProducts", "MyOrders", new { id = Model.Id })
            </div>
        </div>
    </div>
</div>
