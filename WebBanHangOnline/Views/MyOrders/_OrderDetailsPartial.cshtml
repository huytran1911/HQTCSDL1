@model List<WebBanHangOnline.Models.EF.OrderDetail>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Sản phẩm</th>
            <th>Giá</th>
            <th>Số lượng</th>
            <th>Thành tiền</th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 1;
            foreach (var item in Model)
            {
                <tr>
                    <td>@i</td>
                    <td>@item.Product.Title</td>
                    <td>@String.Format("{0:N0} đ", item.Price)</td>
                    <td>@item.Quantity</td>
                    <td>@String.Format("{0:N0} đ", item.Price * item.Quantity)</td>
                </tr>
                i++;
            }
        }
    </tbody>
</table>
